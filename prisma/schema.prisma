generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Budget {
  id        Int        @id @default(autoincrement())
  month     Int
  year      Int
  lineItems LineItem[]
}

model LineItem {
  id       Int      @id @default(autoincrement())
  name     String
  date     DateTime @db.Timestamptz(3)
  amount   Float
  budget   Budget   @relation(fields: [budgetId], references: [id])
  budgetId Int
  paid     Boolean  @default(false)
}
